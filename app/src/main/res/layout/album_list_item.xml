<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:elevation="1dp"
    android:layout_margin="@dimen/normal_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rlAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/ivAlbumImage"
            android:layout_width="@dimen/grid_item_height"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/short_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/short_margin"
            android:layout_toEndOf="@+id/ivAlbumImage"
            android:text="Album Name"
            style="@style/AppTheme.CardHeadLineTextStyle"/>

        <TextView
            android:id="@+id/tvAlbumArtist"
            style="@style/AppTheme.CardBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlbumName"
            android:layout_marginBottom="@dimen/short_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_toEndOf="@+id/ivAlbumImage"
            android:text="Album Artist" />

        <TextView
            android:id="@+id/tvAlbumPlayCount"
            style="@style/AppTheme.CardBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvAlbumName"
            android:layout_centerVertical="true"
            android:text="Play Count" />

        <Button
            android:id="@+id/btSaveArtists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Save" />

    </RelativeLayout>

</android.support.v7.widget.CardView>